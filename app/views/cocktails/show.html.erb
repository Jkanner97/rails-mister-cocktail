<h3>Cocktail name:</h3>
<%= @cocktail.name %>
<% @cocktail.doses.each do |dose|%>
<p><%= dose.description  %>:</p>
<li><%= dose.ingredient.name %></li>
<%= link_to "Delete a dose", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>

<%= link_to "Add dosage", new_cocktail_dose_path(@cocktail) %>

